<style>
    /* Estilo para o carrossel */
    #carouselExampleCaptions {
        position: relative;
        width: 100%;
        max-height: 500px; /* Ajuste a altura máxima do carrossel conforme necessário */
        overflow: hidden;
    }

    .carousel-item img {
        width: 100%;
        height: auto; /* Mantém a proporção da imagem */
    }

    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5); /* Adiciona um fundo escuro com transparência para melhor legibilidade do texto */
        padding: 10px;
        border-radius: 5px;
    }

    .carousel-control-prev-icon, .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5); /* Adiciona um fundo escuro aos ícones de controle */
        border-radius: 50%;
    }

    /* Ajuste o tamanho dos botões de controle para melhor visibilidade */
    .carousel-control-prev, .carousel-control-next {
        width: 5%;
    }

    /* Define a regra para todos os botões */
    .btn {
        font-size: 18px; /* Aumenta o tamanho da fonte dos botões */
        padding: 30px 100px; /* Aumenta o padding interno dos botões */
        margin: 10px; /* Adiciona espaço ao redor dos botões */
        background-color: #0780f9;
        color: white;
    }

    /* Centraliza os botões */
    .button-container {
        display: flex;
        justify-content: center;
        gap: 150px; /* Espaço entre os botões */
    }

</style>

<div id="carouselExampleCaptions" class="carousel slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/escola.png" />
            <div class="carousel-caption d-none d-md-block">
