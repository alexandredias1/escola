@page
@model escola.Pages.UnidadesModel
@{
    ViewData["Title"] = "Unidades - Colégio Alfa";
    var unidades = Model.Unidades;  // Acessando a lista de unidades a partir do modelo
}

<header class="p-3 mb-3 border-bottom">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                <img class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap" src="/imagens/logocentershop.jpg" />
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/" class="nav-link px-2 link-secondary">Home</a></li>
                <li><a href="/Unidades" class="nav-link px-2 link-body-emphasis">Unidades</a></li>
                <li><a href="#" class="nav-link px-2 link-body-emphasis">Sobre</a></li>
                <li><a href="#" class="nav-link px-2 link-body-emphasis">Contato</a></li>
            </ul>

            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                <input type="search" class="form-control" placeholder="Buscar..." aria-label="Buscar">
            </form>
        </div>
    </div>
</header>

<div class="container mt-4">
    <h2>Unidades - Colégio Alfa</h2>
    <div class="row mt-4">
        @for (int i = 0; i < unidades.Count; i++)
        {
            var unidade = unidades[i];
            <div class="col-md-4 mb-4">
                <div class="unit-card">
                    <img src="@unidade.ImagemUrl" class="img-fluid unit-image" alt="@unidade.Nome">
                    <div class="unit-details p-3">
                        <h5>@unidade.Nome</h5>
                        <p><strong>Descrição:</strong> @unidade.Descricao</p>
                        <p><strong>Localização:</strong> @unidade.Localizacao</p>
                        <a href="/Unidadebarra?id=@(i+1)" class="btn btn-details">Mais detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .unit-card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 10px;
        background-color: #fff;
        overflow: hidden;
    }

    .unit-card img.unit-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .unit-card:hover {
        box-shadow: 0 8px 16px rgba(0,0,0,0.3);
    }

    .unit-details {
        padding: 15px;
    }

    .unit-details h5 {
        font-weight: bold;
        color: #6c63ff;
    }

    .unit-details p {
        margin: 0;
        color: #555;
    }

    .btn-details {
        background-color: #6c63ff;
        color: #fff;
        border-radius: 20px;
        padding: 5px 15px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .btn-details:hover {
        background-color: #5a52e0;
        color: #fff;
    }
</style>
