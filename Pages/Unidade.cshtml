    }

        .image-gallery img {
            max-width: 100%;
            height: auto;
            border-radius: 8px; /* Arredondamento das bordas das imagens */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Sombra leve nas imagens */
