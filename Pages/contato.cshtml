@page
@model escola.Pages.contatoModel
@{
}
<div class="flex-box container-box">
    <div class="contact-form" aling="center">
        <span class="heading">Fale conosco</span>
        <form>
            <label for="nome">Nome:</label>
            <input type="text" required="">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required="">
            <label for="Mensagem">Mensagem:</label>
            <textarea id="mensagem" name="Mensagem" required=""></textarea>
            <button type="submit">Enviar</button>
        </form>
    </div>
</div>
<br>



<style>
    img{
        max-width: 850px;
        max-height: 550px;
        width: auto;
        max-width: 100%;
    }

    body{
        background: rgb(4,68,212);
        background: linear-gradient(90deg, rgba(0,51,102,1) 35%, rgba(7,128,249,1) 100%);
    }
    .container-form {
        background-color: #F2F2F2;
    }

    .flex-box {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .container-box {
        height: 100%;
    }

    div {
        align-items: center;
        width: 100%;
    }

    .contact-form {
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 10px;
    }

        .contact-form label {
            color: black;
        }

        .contact-form .heading {
            font-size: 35px;
            color: black;
            margin-bottom: 12px;
            font-weight: bold;
            display: block;
        }

        .contact-form form {
            display: flex;
            flex-direction: column;
        }

        .contact-form label {
            margin-bottom: 10px;
        }

    textarea {
        resize: none;
        height: 80px;
        width: 200px;
    }

    .contact-form input, .contact-form textarea {
        padding: 10px;
        border: none;
        border-radius: 5px;
        margin-bottom: 20px;
    }

        .contact-form input:focus, .contact-form textarea:focus {
            outline: none;
            box-shadow: 0 0 5px #CC3333;
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
        }

    .contact-form button[type="submit"] {
        background-color: #CC3333;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
    }

        .contact-form button[type="submit"]:hover {
            transform: scale(1.1);
            transition: transform 0.3s ease-in-out;
        }

</style>
